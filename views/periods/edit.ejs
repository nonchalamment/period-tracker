<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/periods.css" />
<%- include('../partials/nav') %>


<section>
  <h1>Edit Period!</h1>
  <% if (user) { %>
    <div id="showmainform">
      <form 
      id="new-form" 
      action="/periods/<%= period._id %>?_method=PUT" 
      method="POST">
        <div> 
          <label for="starts">Start Date:</label>
          <input type="datetime-local" name="startDate" id="starts-input">
        </div>
        <div>
          <label for="ends">End Date:</label>
          <input type="datetime-local" name="endDate" id="ends-input">
        </div>
        <button class="btn1" type="submit">Edit Period</button>
      </form>
    </div>
  <% } %>

  <%- include('../partials/footer') %>