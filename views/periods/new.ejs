<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/periods.css" />
<%- include('../partials/nav') %>
<main>
  <section>
    <h1>Add New Period!</h1>
    <%# New Code Below %>
    <div id="addnew">
      <% if (user) { %>
        <form action="/periods" method="POST">
          <div>
            <label for="starts" class="startandenddate">Start Date:</label>
            <input type="datetime-local" name="startDate" id="starts-input"
              value="<%= new Date().toISOString().slice(0, 19) %>">
          </div>
          <div>
            <label for="ends" class="startandenddate">End Date:</label>
            <input type="datetime-local" name="endDate" id="ends-input"
              value="<%= new Date(+ new Date() + 7*24*60*60*1000).toISOString().slice(0, 19) %>">
          </div>
          <div>
            <button type="submit" class="startandenddate" id="addperiodbtn">Add Period</button>
          </div>
        </form>
      <% } %>
    </div>
  </section>
</main>

  <%- include('../partials/footer') %>